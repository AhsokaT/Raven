{
    "include": [
        "src/**/*"
    ],
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "removeComments": false,
        "target": "ES2022",
        "moduleResolution": "Node",
        "module": "CommonJS",
        "outDir": "./dist",
        "esModuleInterop": true
    }
}